{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compile",
            "command": "g++",
            "args": [
                "-g",
                "TestProgram.cpp",
                "-o",
                "${fileDirname}\\TestProgram.exe"    //编译后文件的地址和文件名.exe
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "dependsOn":["changeName"]
        },
        {
            "label": "changeName",
            "type": "shell",
            "command": "cp",
            "args": [
                "\"${file}\"",
                "${fileDirname}\\TestProgram.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        }
    ]
}